# iChrisBirch Development Environment Configuration
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env to version control

ENVIRONMENT="development"
PROTOCOL="http"

# ============ AI Configuration ============
AI_OPENAI_API_KEY="your-openai-api-key"
AI_OPENAI_DEFAULT_MODEL="gpt-4.1"

# ============ Authentication ============
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
AUTH_JWT_SECRET_KEY="generate-a-random-hex-string"
AUTH_JWT_SIGNING_ALGORITHM="HS256"
AUTH_INTERNAL_SERVICE_KEY="internal_service_key"
AUTH_ACCEPTING_NEW_SIGNUPS="True"

# ============ AWS Configuration ============
AWS_ACCOUNT_ID="your-aws-account-id"
AWS_KMS_KEY="key/your-kms-key-id"
AWS_REGION="us-east-2"
AWS_S3_BACKUP_BUCKET="your-backup-bucket"
AWS_POSTGRES_BACKUP_ROLE="role/your-backup-role"

# ============ Chat Service ============
CHAT_HOST="127.0.0.1"
CHAT_PORT="8505"

# ============ FastAPI Configuration ============
FASTAPI_DEBUG="True"
FASTAPI_ENV="development"
FASTAPI_HOST="api"
FASTAPI_PORT="8000"
FASTAPI_TESTING="False"

# ============ Flask Configuration ============
FLASK_DEBUG="True"
FLASK_HOST="app"
FLASK_PORT="5000"
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY="generate-a-random-hex-string"
FLASK_APP_ID="generate-a-random-hex-string"
FLASK_TESTING="False"

# ============ GitHub ============
GITHUB_API_TOKEN="your-github-pat"

# ============ PostgreSQL ============
POSTGRES_DB="ichrisbirch"
POSTGRES_HOST="postgres"
POSTGRES_PASSWORD="postgres"
POSTGRES_PORT="5432"
POSTGRES_USERNAME="postgres"
POSTGRES_DB_SCHEMAS="apartments,box_packing,chat,habits"

# ============ Redis ============
REDIS_HOST="redis"
REDIS_PASSWORD=""
REDIS_PORT="6379"
REDIS_DB="0"

# ============ Default Users (for testing) ============
USERS_DEFAULT_ADMIN_USER_EMAIL="admin@example.com"
USERS_DEFAULT_ADMIN_USER_NAME="admin"
USERS_DEFAULT_ADMIN_USER_PASSWORD="adminpassword"

USERS_DEFAULT_REGULAR_USER_EMAIL="user@example.com"
USERS_DEFAULT_REGULAR_USER_NAME="user"
USERS_DEFAULT_REGULAR_USER_PASSWORD="password"

# ============ Traefik Configuration ============
# Generate with: ./deploy-containers/traefik/scripts/setup-dev-environment.sh credentials
# Format: username:$$apr1$$hash (double $ for docker-compose)
TRAEFIK_DASHBOARD_AUTH="dev:$$apr1$$generated-hash"

# Production only (used by Let's Encrypt)
# DOMAIN="yourdomain.com"
# ACME_EMAIL="admin@yourdomain.com"
